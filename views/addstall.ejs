<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>Add Stall</title>
    <link rel="icon" type="image/x-icon" href="/FFwebicon.webp">
</head>
<body>
  <%- include('partials/navbar.ejs') %>

      <div class="container mt-3">
        <h2>Add Stall</h2>

        <form action="/stalls" method="POST" enctype="multipart/form-data">
            <div class="mb-3 mt-3">
                <label for="stallName">Stall Name:</label>
                <input type="text" class="form-control" placeholder="Enter stall name" name="stallName" oninput="capitalizeInput(this)" required>
            </div>
            <div class="mb-3 mt-3">
                <label for="location">Location:</label>
                <input type="text" class="form-control" placeholder="Enter location" name="location" oninput="capitalizeInput(this)" required>
            </div>
            <div class="mb-3 mt-3">
                <label for="price">Price:</label>
                <input type="number" class="form-control" placeholder="Enter price" name="price" required>
            </div>
            <div class="form-group">
                <label for="cuisine">Select a cuisine:</label>
                <select class="form-control" name="cuisine" required>
                    <option value="">Choose a cuisine</option>
                    <option value="Chinese">Chinese</option>
                    <option value="Malay">Malay</option>
                    <option value="Indian">Indian</option>
                    <option value="Western">Western</option>
                    <option value="Indonesian">Indonesian</option>
                    <option value="Japanese">Japanese</option>
                    <option value="Korean">Korean</option>
                    <option value="Thai">Thai</option>
                    <option value="French">French</option>
                    <option value="Italian">Italian</option>
                    <option value="Fast Food">Fast Food</option>
                </select>
            </div>
            <div class="mb-3 mt-3">
                <label class="radio-inline"><input type="radio" name="halal" value="Yes" required>Halal</label>
                <label class="radio-inline"><input type="radio" name="halal" value="No" required>Non-Halal</label>         
            </div>
            <div class="mb-3 mt-3">
                <label for="picture">Upload Picture:</label>
                <input type="file" class="form-control" name="picture" required>
            </div>
            
            <input type="hidden" name="currenttime" id="currenttime">
            <div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>

    <script>
      let d = document.lastModified;
      document.getElementById('currenttime').value = d;
    </script>
    <script>
      function capitalizeInput(input) {
          input.value = input.value
              .toLowerCase()
              .replace(/(?:^|\s)\S/g, function(a) { return a.toUpperCase(); });
      }
      </script>
    
</body>
</html>