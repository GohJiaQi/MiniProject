<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>Update Stall</title>
    <link rel="icon" type="image/x-icon" href="/FFwebicon.webp">
</head>
<body>
  <%- include('partials/navbar.ejs') %>

      <div class="container mt-3">
        <h2>Update Stall</h2>
        <% if (updatestall) { %>
            <form action="/stalls/<%= updatestall.stallId %>/update" method="POST" enctype="multipart/form-data">
                <div class="mb-3 mt-3">
                    <label for="stallName">Stall Name:</label>
                    <input type="text" class="form-control" placeholder="Enter stall name" name="stallName" oninput="capitalizeInput(this)" value = "<%= updatestall.stallName %>">
                </div>
                <div class="mb-3 mt-3">
                    <label for="location">Location:</label>
                    <input type="text" class="form-control" placeholder="Enter location" name="location" oninput="capitalizeInput(this)" value = "<%= updatestall.location %>">
                </div>
                <div class="mb-3 mt-3">
                    <label for="price">Price:</label>
                    <input type="text" class="form-control" placeholder="Enter price" name="price" value = <%= updatestall.price %>>
                </div>
                <div class="form-group">
                    <label for="cuisine">Select a cuisine:</label>
                    <select class="form-control" name="cuisine">
                        <option value=<%= updatestall.cuisine %>>Choose a cuisine</option>
                        <option value="Chinese">Chinese</option>
                        <option value="Malay">Malay</option>
                        <option value="Indian">Indian</option>
                        <option value="Western">Western</option>
                        <option value="Indonesian">Indonesian</option>
                        <option value="Japanese">Japanese</option>
                        <option value="Korean">Korean</option>
                        <option value="Thai">Thai</option>
                        <option value="French">French</option>
                        <option value="Italian">Italian</option>
                        <option value="Fast Food">Fast Food</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="halal">Halal/Non-Halal:</label>
                    <select class="form-control" name="halal">
                        <option value=<%= updatestall.halal %>>Choose the Halal option</option>
                        <option value="Yes">Halal</option>
                        <option value="No">Non-Halal</option>
                    </select>
                </div>
                <div class="mb-3 mt-3">
                    <label for="picture">Current Picture:</label><br>
                    <input type="text" name="currentPicture" value=<%= updatestall.picture %> readonly><br>
                    <img src = "/<%= updatestall.picture %>" width="20%"><br><br>
                    New Picture:<br> <input type="file" class="form-control" name="picture" value=<%= updatestall.picture %>>
                </div>
                
                <input type="hidden" name="currenttime" id="currenttime">
                <div>
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
            </form>
        <% } else { %>
            <p>No Stall found.</p>
        <% } %>
    </div>

    <script>
      let d = document.lastModified;
      document.getElementById('currenttime').value = d;
    </script>
    <script>
      function capitalizeInput(input) {
          input.value = input.value
              .toLowerCase()
              .replace(/(?:^|\s)\S/g, function(a) { return a.toUpperCase(); });
      }
      </script>
    
</body>
</html>