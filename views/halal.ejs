<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <title>Halal</title>
  <link rel="icon" type="image/x-icon" href="/FFwebicon.webp">
</head>

<body>
  <%- include('partials/navbar.ejs') %>

  <div class="container" id="myUL">
    <div class="row row-cols-1 row-cols-md-3">
      <% for (let i = 0; i < halal.length; i++) { %>
        <div class="col mt-4 card-item">
          <div class="card" style="width: 18rem;">
            <img src="/<%= halal[i].picture %>" class="card-img-top" alt="<%= halal[i].stallName %>">
            <div class="card-body">
              <h5 class="card-title"><%= halal[i].stallName %></h5>
              <p class="card-text"><small class="text-muted"><a href="/stalls/<%= halal[i].id %>/update">Last Updated: </a><%= halal[i].currenttime %></small></p>
              <div class="btn-group">
                <a href="/stalls/<%= halal[i].id %>" class="btn btn-sm btn-outline-primary">See More</a>
                <a href="/stalls/<%= halal[i].id %>/delete" class="btn btn-sm btn-outline-danger">Delete</a>
              </div>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>

</body>

</html>